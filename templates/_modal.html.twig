<div id="app_modal" tabindex="-1" aria-hidden="true" class="hidden opacity-0 transition-opacity duration-300 fixed inset-0 z-50 overflow-y-auto overflow-x-hidden flex justify-center items-center bg-black/50">
	<div class="relative w-full max-w-2xl p-4">
		<div class="relative bg-white dark:bg-gray-800 rounded-lg shadow">
			<div class="flex justify-between items-start p-4 border-b dark:border-gray-700">
				<h3 class="text-xl font-semibold text-gray-900 dark:text-white" id="app_modal_title">
					{{'Details' | trans}}
				</h3>
				<button type="button" class="text-gray-400 hover:text-gray-900 dark:hover:text-white" data-modal-hide="app_modal" data-action="click->modal#close">
					<svg class="w-4 h-4" fill="none" stroke="currentColor" viewbox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
					</svg>
				</button>
			</div>

			<div class="p-4 space-y-4" id="app_modal_content"></div>

			<div class="flex justify-end p-4 border-t dark:border-gray-700 gap-2" id="app_modal_footer"></div>
		</div>
	</div>
</div>
