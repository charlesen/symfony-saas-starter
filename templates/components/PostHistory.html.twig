<div {{ attributes }} class="space-y-4">

	{% for post in this.posts %}
		<div class="p-4 bg-white dark:bg-gray-800 border rounded shadow">
			<p class="text-sm whitespace-pre-line">{{ post.content }}</p>
			<span class="text-xs text-gray-400">{{ post.createdAt|ago }}</span>
		</div>
	{% endfor %}

	<div class="flex justify-center" data-controller="app" data-action="app#intersect">
		<button {{ live_action('loadMore') }} data-intersection-target="loadMoreButton" class="mt-4 px-4 py-2 text-sm bg-gray-100 hover:bg-gray-200 rounded">
			{{ 'See more'|trans }}
		</button>
	</div>

</div>
