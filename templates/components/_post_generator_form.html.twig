<div class="space-y-4">

	<div>
		<label for="topic" class="block mb-1 font-medium">{{ 'Topic' | trans }}</label>
		<input type="text" id="topic" name="topic" class="w-full rounded-md border-gray-300 shadow-sm" placeholder="Ex: AI in marketing" data-model="norender|topic">
	</div>

	<div>
		<label for="tone" class="block mb-1 font-medium">{{ 'Tone' | trans }}</label>
		<select id="tone" name="tone" class="w-full rounded-md border-gray-300 shadow-sm" data-model="norender|tone">
			{% for option in app.options('PostGenerator::TONES') %}
				<option value="{{ option }}" {% if this.tone == option %} selected {% endif %}></option>
			{{ option }}
		</option>
	{% endfor %}
</select></div><div>
<label for="audience" class="block mb-1 font-medium">{{ 'Audience' | trans }}</label>
<select id="audience" name="audience" class="w-full rounded-md border-gray-300 shadow-sm" data-model="norender|audience">
	{% for option in app.options('PostGenerator::AUDIENCES') %}
		<option value="{{ option }}" {% if this.audience == option %} selected {% endif %}></option>
	{{ option }}
</option>{% endfor %}</select></div><div><label for="prompt_style" class="block mb-1 font-medium">{{ 'Style' | trans }}</label><select id="prompt_style" name="prompt_style" class="w-full rounded-md border-gray-300 shadow-sm" data-model="norender|promptStyle">{% for option in app.options('PostGenerator::STYLES') %}
<option value="{{ option }}" {% if this.promptStyle == option %} selected {% endif %}></option>{{ option | replace({'_': ' '}) | title }}</option>{% endfor %}</select></div><div><label for="language" class="block mb-1 font-medium">{{ 'Language' | trans }}</label><select id="language" name="language" class="w-full rounded-md border-gray-300 shadow-sm" data-model="norender|language">{% for option in app.options('PostGenerator::LANGUAGES') %}<option value="{{ option }}" {% if this.language == option %} selected {% endif %}></option>{{ option }}</option>{% endfor %}</select></div><div><label for="keywords" class="block mb-1 font-medium">{{ 'Keywords (optional)' | trans }}</label><input type="text" id="keywords" name="keywords" class="w-full rounded-md border-gray-300 shadow-sm" placeholder="e.g. automation, ChatGPT, future" data-model="norender|keywords"></div><div><button type="submit" class="w-full bg-blue-600 text-white rounded-md px-4 py-2 hover:bg-blue-700 transition">{{ 'Generate Post' | trans }}</button></div></div>
