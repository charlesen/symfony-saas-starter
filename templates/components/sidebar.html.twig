{# Sidebar principale #}
<aside 
  id="app-sidebar" 
  class="fixed left-0 top-0 z-40 w-64 h-screen pt-20 transition-transform -translate-x-full sm:translate-x-0" 
  aria-label="Sidebar">
	<div class="h-full px-3 pb-20 overflow-y-auto bg-gray-50 border-r border-gray-200 dark:bg-gray-800 dark:border-gray-700 flex flex-col">
		<div class="flex-grow">
			<ul class="space-y-2 font-medium">
				<li>
					<a href="{{ path('dashboard_index') }}" class="flex items-center p-2 text-gray-900 rounded-lg dark:text-white hover:bg-gray-100 dark:hover:bg-gray-700 group {{ app.request.get('_route') == 'dashboard_index' ? 'bg-gray-100 dark:bg-gray-700' }}">
						<svg class="w-5 h-5 text-gray-500 transition duration-75 dark:text-gray-400 group-hover:text-gray-900 dark:group-hover:text-white" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 22 21">
							<path d="M16.975 11H10V4.025a1 1 0 0 0-1.066-.998 8.5 8.5 0 1 0 9.039 9.039.999.999 0 0 0-1-1.066h.002Z"/>
							<path d="M12.5 0c-.157 0-.311.01-.565.027A1 1 0 0 0 11 1.02V10h8.975a1 1 0 0 0 1-.935c.013-.188.028-.374.028-.565A8.51 8.51 0 0 0 12.5 0Z"/>
						</svg>
						<span class="ms-3">{{ 'Dashboard' | trans }}</span>
					</a>
				</li>
				<li>
					<a href="{{ path('dashboard_profile') }}" class="flex items-center p-2 text-gray-900 rounded-lg dark:text-white hover:bg-gray-100 dark:hover:bg-gray-700 group {{ app.request.get('_route') == 'dashboard_profile' ? 'bg-gray-100 dark:bg-gray-700' }}">
						<svg class="flex-shrink-0 w-5 h-5 text-gray-500 transition duration-75 dark:text-gray-400 group-hover:text-gray-900 dark:group-hover:text-white" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 18">
							<path d="M14 2a3.963 3.963 0 0 0-1.4.267 6.439 6.439 0 0 1-1.331 6.638A4 4 0 1 0 14 2Zm1 9h-1.264A6.957 6.957 0 0 1 15 15v2a2.97 2.97 0 0 1-.184 1H19a1 1 0 0 0 1-1v-1a5.006 5.006 0 0 0-5-5ZM6.5 9a4.5 4.5 0 1 0 0-9 4.5 4.5 0 0 0 0 9ZM8 10H5a5.006 5.006 0 0 0-5 5v2a1 1 0 0 0 1 1h11a1 1 0 0 0 1-1v-2a5.006 5.006 0 0 0-5-5Z"/>
						</svg>
						<span class="flex-1 ms-3 whitespace-nowrap">{{ 'Profile' | trans }}</span>
					</a>
				</li>
				<li>
					<a href="#" class="flex items-center p-2 text-gray-900 rounded-lg dark:text-white hover:bg-gray-100 dark:hover:bg-gray-700 group">
						<svg class="flex-shrink-0 w-5 h-5 text-gray-500 transition duration-75 dark:text-gray-400 group-hover:text-gray-900 dark:group-hover:text-white" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 18 20">
							<path d="M17 5.923A1 1 0 0 0 16 5h-3V4a4 4 0 1 0-8 0v1H2a1 1 0 0 0-1 .923L.086 17.846A2 2 0 0 0 2.08 20h13.84a2 2 0 0 0 1.994-2.153L17 5.923ZM7 4a2 2 0 1 1 4 0v1H7V4Zm-.5 5a1.5 1.5 0 1 1 3 0 1.5 1.5 0 0 1-3 0Z"/>
						</svg>
						<span class="flex-1 ms-3 whitespace-nowrap">{{ 'Billing' | trans }}</span>
					</a>
				</li>
				<li>
					<a href="#" class="flex items-center p-2 text-gray-900 rounded-lg dark:text-white hover:bg-gray-100 dark:hover:bg-gray-700 group">
						<svg class="flex-shrink-0 w-5 h-5 text-gray-500 transition duration-75 dark:text-gray-400 group-hover:text-gray-900 dark:group-hover:text-white" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 18 16">
							<path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 8h11m0 0L8 4m4 4-4 4m4-11h3a2 2 0 0 1 2 2v10a2 2 0 0 1-2 2h-3"/>
						</svg>
						<span class="flex-1 ms-3 whitespace-nowrap">{{ 'Help' | trans }}</span>
					</a>
				</li>
			</ul>
		</div>

		{# Theme switcher en bas de la sidebar #}
		<div class="mt-auto p-4 border-t border-gray-200 dark:border-gray-700">
			<div class="flex items-center justify-between">
				<label for="theme" class="block text-sm font-medium text-gray-700 dark:text-gray-300">{{ 'Theme' | trans }}</label>
				<select id="theme" name="theme" data-controller="theme" data-theme-update-url-value="{{ path('dashboard_theme_update') }}" data-theme-theme-value="{{ app.user.preferedTheme }}" data-action="change->theme#change" class="w-28 pl-3 pr-8 py-1.5 text-sm text-gray-900 bg-white border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 dark:bg-gray-700 dark:border-gray-600 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500 appearance-none bg-no-repeat bg-[length:16px_16px] bg-[right_0.5rem_center] bg-[url('data:image/svg+xml;charset=utf-8,%3Csvg%20xmlns%3D%22http%3A%2F%2Fwww.w3.org%2F2000%2Fsvg%22%20viewBox%3D%220%200%2020%2020%22%20fill%3D%22%236b7280%22%3E%3Cpath%20fill-rule%3D%22evenodd%22%20d%3D%22M10%203a.75.75%200%2001.55.24l3.25%203.5a.75.75%200%2111-1.1%201.02L10%204.852%207.3%207.76a.75.75%200%2001-1.1-1.02l3.25-3.5A.75.75%200%200110%203zm-3.76%209.2a.75.75%200%20011.06.04l2.7%202.908%202.7-2.908a.75.75%200%20111.1%201.02l-3.25%203.5a.75.75%200%2001-1.1%200l-3.25-3.5a.75.75%200%2001.04-1.06z%22%20clip-rule%3D%22evenodd%22%2F%3E%3C%2Fsvg%3E')] dark:bg-[url('data:image/svg+xml;charset=utf-8,%3Csvg%20xmlns%3D%22http%3A%2F%2Fwww.w3.org%2F2000%2Fsvg%22%20viewBox%3D%220%200%2020%2020%22%20fill%3D%22%23d1d5db%22%3E%3Cpath%20fill-rule%3D%22evenodd%22%20d%3D%22M10%203a.75.75%200%2001.55.24l3.25%203.5a.75.75%200%2111-1.1%201.02L10%204.852%207.3%207.76a.75.75%200%2001-1.1-1.02l3.25-3.5A.75.75%200%200110%203zm-3.76%209.2a.75.75%200%20011.06.04l2.7%202.908%202.7-2.908a.75.75%200%20111.1%201.02l-3.25%203.5a.75.75%200%2001-1.1%200l-3.25-3.5a.75.75%200%2001.04-1.06z%22%20clip-rule%3D%22evenodd%22%2F%3E%3C%2Fsvg%3E')]">
					<option value="system" {{ app.user.preferedTheme == 'system' ? 'selected' : '' }}>{{ 'System' | trans }}</option>
					<option value="light" {{ app.user.preferedTheme == 'light' ? 'selected' : '' }}>{{ 'Light' | trans }}</option>
					<option value="dark" {{ app.user.preferedTheme == 'dark' ? 'selected' : '' }}>{{ 'Dark' | trans }}</option>
				</select>
			</div>
		</div>
	</div>
</aside>
