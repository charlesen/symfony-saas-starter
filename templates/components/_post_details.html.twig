<div
	class="relative p-4 bg-white dark:bg-gray-800 border rounded-lg shadow group space-y-2">

	{# Toolbar Actions #}
	<div
		class="absolute top-2 right-2 flex gap-2">

		{# Favorite #}
		<button {{ live_action('toggleFavorite', { id: post.id } ) }} class="text-gray-400 hover:text-yellow-400 transition" title="Ajouter en favori">
			{% if post.isFavorite %}
				⭐
			{% else %}
				☆
			{% endif %}
		</button>

	</div>

	{# Content #}
	<p class="text-sm whitespace-pre-line">{{ post.content }}</p>

	<div class="flex justify-between text-xs text-gray-400">
		<p>{{ post.createdAt|ago }}</p>
		{# Copy #}
		<div data-controller="copy" data-copy-content="{{ post.content }}" class="relative">
			<button data-action="click->copy#copy" class="text-gray-400 dark:text-gray-500 hover:text-gray-600 dark:hover:text-gray-300 transition" title="Copier">
				<svg class="w-5 h-5" fill="none" stroke="currentColor" viewbox="0 0 24 24">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 2H15A2 2 0 0117 4V6A2 2 0 0115 8H9A2 2 0 017 6V4A2 2 0 019 2ZM7 6V20A2 2 0 009 22H15A2 2 0 0017 20V6"/>
				</svg>
			</button>

			<span data-copy-target="feedback" class="absolute text-xs top-8 right-0 bg-gray-700 text-white rounded px-2 py-0.5 hidden">
				{{ 'Copied' | trans }}
			</span>
		</div>
	</div>

</div>
