{% extends 'layout_sidebar.html.twig' %}

{% block title %}
	{{ 'Dashboard' | trans }}
{% endblock %}

{% block content %}
	<div class="space-y-8">
		{# Vue d'ensemble #}
		<section class="bg-white shadow rounded-lg p-6">
			<h2 class="text-xl font-semibold mb-4">{{ 'Overview' | trans }}</h2>
			<div class="grid grid-cols-1 md:grid-cols-3 gap-6">
				<div class="bg-blue-50 p-4 rounded-lg">
					<h3 class="text-sm font-medium text-blue-800">{{ 'Subscription' | trans }}</h3>
					<p class="mt-2 text-3xl font-semibold text-blue-900">Free</p>
				</div>
				<div class="bg-green-50 p-4 rounded-lg">
					<h3 class="text-sm font-medium text-green-800">{{ 'Status' | trans }}</h3>
					<p class="mt-2 text-3xl font-semibold text-green-900">Active</p>
				</div>
				<div class="bg-purple-50 p-4 rounded-lg">
					<h3 class="text-sm font-medium text-purple-800">{{ 'Next billing' | trans }}</h3>
					<p class="mt-2 text-3xl font-semibold text-purple-900">-</p>
				</div>
			</div>
		</section>

		{# Actions rapides #}
		<section class="bg-white shadow rounded-lg p-6">
			<h2 class="text-xl font-semibold mb-4">{{ 'Quick actions' | trans }}</h2>
			<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
				<a href="#" class="flex items-center p-4 bg-gray-50 rounded-lg hover:bg-gray-100 transition-colors">
					<span class="flex-shrink-0 w-8 h-8 flex items-center justify-center bg-blue-100 text-blue-500 rounded-lg mr-3">
						<i class="fas fa-crown"></i>
					</span>
					<div>
						<h3 class="font-medium">{{ 'Upgrade plan' | trans }}</h3>
						<p class="text-sm text-gray-500">{{ 'Get more features' | trans }}</p>
					</div>
				</a>
				<a href="{{ path('dashboard_profile_index') }}" class="flex items-center p-4 bg-gray-50 rounded-lg hover:bg-gray-100 transition-colors">
					<span class="flex-shrink-0 w-8 h-8 flex items-center justify-center bg-green-100 text-green-500 rounded-lg mr-3">
						<i class="fas fa-user-circle"></i>
					</span>
					<div>
						<h3 class="font-medium">{{ 'Profile' | trans }}</h3>
						<p class="text-sm text-gray-500">{{ 'Update your info' | trans }}</p>
					</div>
				</a>
				<a href="#" class="flex items-center p-4 bg-gray-50 rounded-lg hover:bg-gray-100 transition-colors">
					<span class="flex-shrink-0 w-8 h-8 flex items-center justify-center bg-yellow-100 text-yellow-500 rounded-lg mr-3">
						<i class="fas fa-cog"></i>
					</span>
					<div>
						<h3 class="font-medium">{{ 'Settings' | trans }}</h3>
						<p class="text-sm text-gray-500">{{ 'Configure app' | trans }}</p>
					</div>
				</a>
				<a href="#" class="flex items-center p-4 bg-gray-50 rounded-lg hover:bg-gray-100 transition-colors">
					<span class="flex-shrink-0 w-8 h-8 flex items-center justify-center bg-purple-100 text-purple-500 rounded-lg mr-3">
						<i class="fas fa-question-circle"></i>
					</span>
					<div>
						<h3 class="font-medium">{{ 'Help' | trans }}</h3>
						<p class="text-sm text-gray-500">{{ 'Get support' | trans }}</p>
					</div>
				</a>
			</div>
		</section>

		{# Activité récente #}
		<section class="bg-white shadow rounded-lg p-6">
			<h2 class="text-xl font-semibold mb-4">{{ 'Recent activity' | trans }}</h2>
			<div class="border rounded-lg divide-y">
				<div class="p-4 flex items-center justify-between">
					<div class="flex items-center">
						<span class="w-8 h-8 flex items-center justify-center bg-blue-100 text-blue-500 rounded-lg mr-3">
							<i class="fas fa-sign-in-alt"></i>
						</span>
						<div>
							<p class="font-medium">{{ 'Last login' | trans }}</p>
							<p class="text-sm text-gray-500">{{ 'now' | date('d/m/Y H:i') }}</p>
						</div>
					</div>
				</div>
			</div>
		</section>
	</div>
{% endblock %}
