{% extends 'layout_sidebar.html.twig' %}

{% block title %}{{ 'Dashboard' | trans }}{% endblock %}

{% block content %}
<div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <div class="p-6 bg-white rounded-lg shadow dark:bg-gray-700">
        <h2 class="text-xl font-semibold mb-4 text-gray-900 dark:text-white">{{ 'Account Overview' | trans }}</h2>
        <div class="space-y-4">
            <div class="flex items-center justify-between">
                <span class="text-gray-600 dark:text-gray-300">{{ 'Subscription' | trans }}</span>
                <span class="px-3 py-1 text-sm text-white bg-primary-500 rounded-full">{{ 'Free' | trans }}</span>
            </div>
            <div class="flex items-center justify-between">
                <span class="text-gray-600 dark:text-gray-300">{{ 'Status' | trans }}</span>
                <span class="px-3 py-1 text-sm text-white bg-green-500 rounded-full">{{ 'Active' | trans }}</span>
            </div>
            <div class="flex items-center justify-between">
                <span class="text-gray-600 dark:text-gray-300">{{ 'Next billing' | trans }}</span>
                <span class="text-gray-900 dark:text-white">-</span>
            </div>
        </div>
    </div>

    <div class="p-6 bg-white rounded-lg shadow dark:bg-gray-700">
        <h2 class="text-xl font-semibold mb-4 text-gray-900 dark:text-white">{{ 'Quick Actions' | trans }}</h2>
        <div class="grid grid-cols-2 gap-4">
            <a href="#" class="p-4 text-center bg-gray-50 rounded-lg hover:bg-gray-100 dark:bg-gray-600 dark:hover:bg-gray-500">
                <svg class="w-8 h-8 mb-2 text-gray-500 mx-auto dark:text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M11.074 4 8.442.408A.95.95 0 0 0 7.014.254L2.926 4h8.148ZM9 13v-1a4 4 0 0 1 4-4h6V6a1 1 0 0 0-1-1H1a1 1 0 0 0-1 1v13a1 1 0 0 0 1 1h17a1 1 0 0 0 1-1v-2h-6a4 4 0 0 1-4-4Z"/>
                    <path d="M19 10h-6a2 2 0 0 0-2 2v1a2 2 0 0 0 2 2h6a1 1 0 0 0 1-1v-3a1 1 0 0 0-1-1Zm-4.5 3.5a1 1 0 1 1 0-2 1 1 0 0 1 0 2Z"/>
                </svg>
                <h3 class="text-sm font-medium text-gray-900 dark:text-white">{{ 'Upgrade Plan' | trans }}</h3>
            </a>
            <a href="{{ path('dashboard_profile_index') }}" class="p-4 text-center bg-gray-50 rounded-lg hover:bg-gray-100 dark:bg-gray-600 dark:hover:bg-gray-500">
                <svg class="w-8 h-8 mb-2 text-gray-500 mx-auto dark:text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M10 0a10 10 0 1 0 10 10A10.011 10.011 0 0 0 10 0Zm0 5a3 3 0 1 1 0 6 3 3 0 0 1 0-6Zm0 13a8.949 8.949 0 0 1-4.951-1.488A3.987 3.987 0 0 1 9 13h2a3.987 3.987 0 0 1 3.951 3.512A8.949 8.949 0 0 1 10 18Z"/>
                </svg>
                <h3 class="text-sm font-medium text-gray-900 dark:text-white">{{ 'Profile' | trans }}</h3>
            </a>
            <a href="#" class="p-4 text-center bg-gray-50 rounded-lg hover:bg-gray-100 dark:bg-gray-600 dark:hover:bg-gray-500">
                <svg class="w-8 h-8 mb-2 text-gray-500 mx-auto dark:text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M18 7.5h-.423l-.452-1.09.3-.3a1.5 1.5 0 0 0 0-2.121L16.01 2.575a1.5 1.5 0 0 0-2.121 0l-.3.3-1.089-.452V2A1.5 1.5 0 0 0 11 .5H9A1.5 1.5 0 0 0 7.5 2v.423l-1.09.452-.3-.3a1.5 1.5 0 0 0-2.121 0L2.576 3.99a1.5 1.5 0 0 0 0 2.121l.3.3L2.423 7.5H2A1.5 1.5 0 0 0 .5 9v2A1.5 1.5 0 0 0 2 12.5h.423l.452 1.09-.3.3a1.5 1.5 0 0 0 0 2.121l1.415 1.413a1.5 1.5 0 0 0 2.121 0l.3-.3 1.09.452V18A1.5 1.5 0 0 0 9 19.5h2a1.5 1.5 0 0 0 1.5-1.5v-.423l1.09-.452.3.3a1.5 1.5 0 0 0 2.121 0l1.415-1.414a1.5 1.5 0 0 0 0-2.121l-.3-.3.452-1.09H18a1.5 1.5 0 0 0 1.5-1.5V9A1.5 1.5 0 0 0 18 7.5Zm-8 6a3.5 3.5 0 1 1 0-7 3.5 3.5 0 0 1 0 7Z"/>
                </svg>
                <h3 class="text-sm font-medium text-gray-900 dark:text-white">{{ 'Settings' | trans }}</h3>
            </a>
            <a href="#" class="p-4 text-center bg-gray-50 rounded-lg hover:bg-gray-100 dark:bg-gray-600 dark:hover:bg-gray-500">
                <svg class="w-8 h-8 mb-2 text-gray-500 mx-auto dark:text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M10 .5a9.5 9.5 0 1 0 9.5 9.5A9.51 9.51 0 0 0 10 .5ZM9.5 4a1.5 1.5 0 1 1 0 3 1.5 1.5 0 0 1 0-3ZM12 15H8a1 1 0 0 1 0-2h1v-3H8a1 1 0 0 1 0-2h2a1 1 0 0 1 1 1v4h1a1 1 0 0 1 0 2Z"/>
                </svg>
                <h3 class="text-sm font-medium text-gray-900 dark:text-white">{{ 'Help' | trans }}</h3>
            </a>
        </div>
    </div>
</div>

<div class="mt-6 p-6 bg-white rounded-lg shadow dark:bg-gray-700">
    <h2 class="text-xl font-semibold mb-4 text-gray-900 dark:text-white">{{ 'Recent Activity' | trans }}</h2>
    <div class="text-gray-600 dark:text-gray-300">
        {{ 'No recent activity' | trans }}
    </div>
</div>
{% endblock %}
